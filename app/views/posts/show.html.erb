<p>
  <strong>User:</strong>
  <%= @post.author.email %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<h4>Add comments</h4>
<div>
  <%= form_for ([@post, @post.comments.build]) do |f| %>
    <%= render partial: 'comments/form', locals: {f: f} %>
  <% end %>
</div>

<h4>Comments</h4>
<ul>
  <% @post.comments.each do |comment|%>
  <%next unless comment.persisted?%>
    <li><%= comment.body %> |
      <strong>Author:</strong> <%= comment.user.email %> |
      <%= link_to 'Destroy', [@post, comment], :method => :delete, :confirm => "Are you sure?" %> </li>
  <% end %>
</ul>

<%= link_to 'Back', posts_path %>